{
  "manifest_version": 3,
  "name": "Windsurf Political Context Analyzer",
  "version": "1.0",
  "description": "Get political discourse and news context for any highlighted text.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
  "128": "icons/icon128.png"
}
}
